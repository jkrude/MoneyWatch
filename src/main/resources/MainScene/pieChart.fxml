<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jkrude.controller.PieChartController">
   <children>
      <BorderPane prefHeight="720.0" prefWidth="1280.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <center>
            <AnchorPane BorderPane.alignment="CENTER">
               <children>
            <PieChart fx:id="pieChart" prefHeight="662.0" prefWidth="1280.0"
              stylesheets="@../css/pieChart.css" title="Categories" AnchorPane.bottomAnchor="16.0"
              AnchorPane.leftAnchor="16.0" AnchorPane.rightAnchor="16.0"
              AnchorPane.topAnchor="16.0"/>
               </children>
            </AnchorPane>
      </center>
         <top>
            <AnchorPane BorderPane.alignment="CENTER_LEFT">
               <children>
                  <ButtonBar prefHeight="26.0" prefWidth="1280.0" AnchorPane.bottomAnchor="16.0" AnchorPane.leftAnchor="16.0" AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="16.0">
                     <buttons>
                        <Button contentDisplay="CENTER" mnemonicParsing="false"
                          text="Data selection"
                          onAction="#changeDataSource"/>
                        <Button fx:id="backBtn" mnemonicParsing="false" text="Back" ButtonBar.buttonData="LEFT" />
                        <Button mnemonicParsing="false" onAction="#goToCategories" text="Categories" ButtonBar.buttonData="RIGHT" />
                        <ToggleButton fx:id="negPosTglBtn" contentDisplay="CENTER" mnemonicParsing="false" text="Neg / Pos" textAlignment="CENTER" ButtonBar.buttonData="OTHER" />
                     </buttons>
                  </ButtonBar>
               </children>
            </AnchorPane>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
